{
  "name": "environment-snippet",
  "displayName": "environment-snippet",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "author": "kitta65",
  "license": "MIT",
  "publisher": "dr666m1",
  "repository": {
    "type": "git",
    "url": "https://github.com/kitta65/environment-snippet"
  },
  "icon": "icon.png",
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Environment Snippet",
      "properties": {
        "environmentSnippet.prefix": {
          "scope": "window",
          "type": "string",
          "default": "SNIPPET_",
          "description": "if empty, register all environment variables as snippets"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@vscode/vsce": "^2.29.0",
    "typescript": "^5.5.3"
  }
}
